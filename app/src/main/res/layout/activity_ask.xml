<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.AskActivity"
    android:background="@color/white"
    android:orientation="vertical">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/_15mdp"
        android:textSize="@dimen/_16font_mdp"
        android:id="@+id/ask_et_question"
        android:background="@drawable/custom_input_question"
        android:textStyle="bold"
        android:layout_margin="@dimen/_17mdp"
        android:padding="@dimen/_7mdp"
        android:hint="Ask Anything!"
      android:textColorHint="@color/red_900"
        android:textColor="@color/black"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/_170mdp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_17mdp"
        android:background="@drawable/button_bg"
        android:fontFamily="@font/roboto"
        android:gravity="center"
        android:text="Submit"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:textSize="@dimen/_17font_mdp"/>




</LinearLayout>