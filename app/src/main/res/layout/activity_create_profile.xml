<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/_12mdp"
    tools:context=".Activity.CreateProfile">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Profile"
        android:textSize="@dimen/_16font_mdp"
        android:textAlignment="center"
        android:layout_margin="@dimen/_8mdp"
        />



    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_cp"
        android:layout_width="@dimen/_110mdp"
        android:layout_height="@dimen/_110mdp"
        android:src="@drawable/ic_baseline_person_24"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Name"
        android:drawableStart="@drawable/ic_baseline_person_24"
        android:drawablePadding="6dp"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:background="@drawable/email_bg"
        android:id="@+id/et_name_cp"
         android:textColor="@color/black"
        android:layout_margin="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Profession"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:background="@drawable/email_bg"
        android:drawableStart="@drawable/ic_baseline_work_24"
        android:drawablePadding="6dp"
        android:id="@+id/et_profession_cp"
        android:textColor="@color/black"
        android:layout_margin="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Bio"
        android:drawablePadding="6dp"
        android:background="@drawable/email_bg"
        android:drawableStart="@drawable/ic_baseline_emoji_people_24"
        android:id="@+id/et_bio_cp"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_margin="4dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:background="@drawable/email_bg"
        android:id="@+id/et_email_cp"
        android:drawablePadding="5dp"
        android:drawableLeft="@drawable/ic_baseline_email_24"
        android:textColor="@color/black"
        android:layout_margin="4dp"/>


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="WebSite"
        android:background="@drawable/email_bg"
        android:id="@+id/et_web_cp"
        android:inputType="text"
        android:scrollHorizontally="true"
        android:ellipsize="end"
        android:textColor="@color/black"
        android:layout_margin="4dp"/>


    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Profile"
        android:layout_margin="10dp"
        android:background="@color/red_800"
        android:textSize="@dimen/_17font_mdp"
        android:id="@+id/btn_cp"/>

<ProgressBar
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/progressbar_cp"
    android:layout_marginTop="5dp"
    android:visibility="gone"/>
</LinearLayout>