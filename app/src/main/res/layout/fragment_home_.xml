<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".Fragment.Home_Fragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40mdp"
        android:layout_marginBottom="@dimen/_4mdp"
        app:cardBackgroundColor="@color/white">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_menu_24"
            app:tint="@color/red_900"
            android:id="@+id/ib_menu_f1"
            android:layout_margin="@dimen/_8mdp"
            android:background="@android:color/transparent"
            android:layout_gravity="left|center_vertical"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:textColor="@color/red_900"
            android:layout_margin="@dimen/_5mdp"
            android:textStyle="bold"
            android:textSize="@dimen/_16font_mdp"
            android:layout_gravity="center"/>


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_edit_24"
            app:tint="@color/red_900"
            android:id="@+id/ib_edit_f1"
            android:layout_margin="@dimen/_8mdp"
            android:background="@android:color/transparent"
            android:layout_gravity="end|center_vertical"
            />

    </androidx.cardview.widget.CardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90mdp"
        android:gravity="center"
        android:orientation="horizontal">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_f1"
            android:layout_width="@dimen/_80mdp"
            android:layout_height="@dimen/_80mdp"
            android:src="@drawable/ic_baseline_person_24"
            android:clickable="true"
            android:elevation="3dp"
            android:focusable="true" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center_vertical">

            <TextView
                android:layout_width="@dimen/_170mdp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_name_f1"
                android:hint="Name"
                android:paddingStart="@dimen/_8mdp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:gravity="start"
                android:textSize="@dimen/_18font_mdp"/>

            <TextView
                android:layout_width="@dimen/_170mdp"
                android:layout_height="wrap_content"
                android:id="@+id/tv_profession_f1"
                android:hint="Profession"
                android:paddingStart="@dimen/_8mdp"
                android:textAlignment="viewStart"
                android:textColor="@color/black"
                android:gravity="start"
                android:textSize="@dimen/_14font_mdp"/>
        </LinearLayout>
    </LinearLayout>



    <TextView
        android:layout_width="@dimen/_170mdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8mdp"
        android:layout_marginStart="@dimen/_16mdp"
        android:text="Primary Details"
        android:layout_marginBottom="@dimen/_15mdp"
        android:paddingStart="@dimen/_8mdp"
        android:textAlignment="viewStart"
        android:textColor="@color/grey_40"
        android:gravity="start"
        android:textSize="@dimen/_14font_mdp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="@dimen/_13font_mdp"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:textColor="@color/grey_40"
        android:drawablePadding="@dimen/_15mdp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:id="@+id/tv_bio_f1"
        android:textSize="@dimen/_16font_mdp"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/_15mdp"
        />


    <TableRow android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginBottom="@dimen/_8mdp"
        android:layout_marginEnd="@dimen/_16mdp"
        android:background="@color/grey_80"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="@dimen/_13font_mdp"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:textColor="@color/grey_40"
        android:drawablePadding="@dimen/_15mdp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:id="@+id/tv_email_f1"
        android:textSize="@dimen/_16font_mdp"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/_15mdp"
        />


    <TableRow android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginBottom="@dimen/_8mdp"
        android:layout_marginEnd="@dimen/_16mdp"
        android:background="@color/grey_80"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textSize="@dimen/_13font_mdp"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:textColor="@color/grey_40"
        android:drawablePadding="@dimen/_15mdp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:clickable="true"
        android:id="@+id/tv_web_f1"
        android:textSize="@dimen/_16font_mdp"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:textColor="@color/black"
        android:drawablePadding="@dimen/_15mdp"

        android:focusable="true" />


    <TableRow android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="@dimen/_16mdp"
        android:layout_marginBottom="@dimen/_8mdp"
        android:layout_marginEnd="@dimen/_16mdp"
        android:background="@color/grey_80"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_23mdp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Followers"
            android:padding="@dimen/_4mdp"
            android:drawablePadding="@dimen/_4mdp"
            android:drawableStart="@drawable/ic_baseline_people_24"
            android:id="@+id/tv_followers_f1"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            android:clickable="true"
            android:layout_marginEnd="@dimen/_8mdp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Posts"
            android:layout_marginStart="@dimen/_8mdp"
            android:padding="@dimen/_4mdp"
            android:drawablePadding="@dimen/_4mdp"
            android:drawableStart="@drawable/ic_baseline_add_photo_alternate_24"
            android:id="@+id/tv_post_f1"
            android:clickable="true"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/black"
            />

        
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Stories"
        android:textColor="@color/red_900"
        android:layout_margin="@dimen/_8mdp"
        android:padding="@dimen/_8mdp"
        android:gravity="center"
        android:background="@drawable/border_decoration"
        android:id="@+id/tv_addstories_f1"
        android:textSize="@dimen/_18font_mdp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Send Message"
        android:background="@drawable/button_bg"
        android:textColor="@color/white"
        android:textSize="@dimen/_15font_mdp"
        android:layout_margin="@dimen/_8mdp"
        android:id="@+id/btn_sendmessege_f1"/>

</LinearLayout>