<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.PrivecyActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40mdp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginBottom="@dimen/_80mdp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Account Status"
            android:textColor="@color/red_900"
            android:textSize="@dimen/_20font_mdp"
            android:padding="7dp"
            android:drawableStart="@drawable/ic_baseline_arrow_back_ios_24"
            android:paddingStart="5dp"
            android:layout_gravity="center_vertical"/>


    </androidx.cardview.widget.CardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Account Privacy"
        android:textSize="@dimen/_20font_mdp"
        android:textColor="@color/black"
        android:padding="5dp"
        android:layout_marginStart="@dimen/_35mdp"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Public"
        android:id="@+id/tv_status"
        android:textColor="@color/blue_grey_800"
        android:layout_marginStart="@dimen/_40mdp"/>



        <Spinner
            android:layout_width="@dimen/_170mdp"
            android:layout_height="wrap_content"
            android:id="@+id/spinner"
            android:layout_marginTop="@dimen/_85mdp"
            android:backgroundTint="@color/red_900"
            android:layout_gravity="center"
            />



    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Status"
        android:id="@+id/btn_privacy"
        android:textColor="@color/white"
        android:background="@drawable/button_bg"
        android:layout_margin="@dimen/_17mdp"
        android:textStyle="bold"
        />


</LinearLayout>